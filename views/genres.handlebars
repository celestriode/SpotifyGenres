
{{#each genres}}
    <div class="row mb-2 w-100">
        <div class="col">
            <div class="row">
                <div class="col">
                    <div class="upper-first">
                        {{this.[0]}}
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-11">
                     <div class="progress">
                        <div class="progress-bar" role="progressbar" style="height: 20px !important;width: {{this.[1]}}%;" aria-valuenow="{{this.[1]}}" aria-valuemin="0" aria-valuemax="100"></div>
                    </div>
                </div>
                <div class="col-1">
                    {{this.[1]}}%
                </div>
            </div>
        </div>
    </div>
{{/each}}